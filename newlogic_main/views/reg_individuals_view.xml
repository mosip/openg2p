<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_registrants_list_tree" model="ir.ui.view">
        <field name="name">view_registrants_list_tree</field>
        <field name="model">res.partner</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <tree string="Registrants">
                <field name="name"/>
                <field name="family_name" optional="hidden"/>
                <field name="given_name" optional="hidden"/>
                <field name="addl_name" optional="hidden"/>
                <field name="is_company" string="Group"/>
                <field name="state_id"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>

    <record id="view_registrants_form" model="ir.ui.view">
        <field name="name">view_registrants_form</field>
        <field name="model">res.partner</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Registrants">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'avatar_128'}"/>
                    <div class="oe_title mb24">
                        <h1 class="oe_read_only">
                            <field id="registrant" class="oe_read_only" name="name" placeholder="Enter name of registrant..."/>
                        </h1>
                        <h2 class="oe_edit_only">
                            <field name="family_name" placeholder="Family Name..." default_focus="1" required="1" class="oe_edit_only"/>
                        </h2>
                        <h2 class="oe_edit_only">
                            <field name="given_name" placeholder="Given Name..." required="1" class="oe_edit_only"/>
                        </h2>
                        <h2 class="oe_edit_only">
                            <field name="addl_name" placeholder="Additional Name..." required="0" class="oe_edit_only"/>
                        </h2>
                        <div class="o_row">
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" attrs="{'readonly': [('parent_id', '!=', False)]}" force_save="1"/>
                        </div>
                    </div>
                    <notebook>
                        <page string="Personal">
                            <group>
                                <group>
                                    <field name="ref" string="ID Number"/>
                                </group>
                                <group>
                                    <field name="birthdate"/>
                                    <field name="age"/>
                                </group>
                            </group>
                        </page>
                        <page string="Contact Details">
                            <group>
                                <group>
                                    <span class="o_form_label o_td_label" name="address_name">
                                        <b>Address</b>
                                    </span>
                                    <div class="o_address_format">
                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                        <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True, 'no_create': True}"/>
                                    </div>
                                </group>
                                <group>
                                    <field name="phone" widget="phone"/>
                                    <field name="mobile" widget="phone"/>
                                    <field name="user_ids" invisible="1"/>
                                    <field name="email" widget="email" context="{'gravatar_image': True}" attrs="{'required': [('user_ids','!=', [])]}"/>
                                    <field name="website" string="Website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                                    <field name="active_lang_count" invisible="1"/>
                                    <label for="lang" attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}"/>
                                    <div class="o_row" attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}">
                                        <field name="lang"/>
                                    </div>
                                </group>
                            </group>
                        </page>                      
                    </notebook>
                    <field name="avatar_128" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="country_code" invisible="1"/>
                    <field name="registrant" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

<!-- List registrants (Card Admin) -->
    <record id="action_registrants_list" model="ir.actions.act_window">
        <field name="name">List of registrants</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_registrant':True,'registrant_form':True}</field>
        <field name="domain">[('registrant', '=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Registrant!
            </p><p>
                Click the create button to enter the new registrant's information.
            </p>
        </field>
    </record>

    <record id="action_registrants_list_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_registrants_list_tree"/>
        <field name="act_window_id" ref="action_registrants_list"/>
    </record>

    <record id="action_registrants_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_registrants_form"/>
        <field name="act_window_id" ref="action_registrants_list"/>
    </record>

    <menuitem id="menu_registrants_list"
        name="List"
        action="action_registrants_list"
        parent="nl_registrant_menu_root"
        sequence="10" 
        groups="newlogic_main.group_nl_admin"/>

</odoo>
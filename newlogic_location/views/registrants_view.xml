<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<!-- Add location field to registrant form view -->
    <record id="view_registrants_location_form" model="ir.ui.view">
        <field name="name">view_registrants_location_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="newlogic_main.view_registrants_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//span[@name='address_name']" position="before">
                <field name="location" placeholder="Location" options="{'no_open': True, 'no_create': True}"/>
            </xpath>
        </field>
    </record>

</odoo>
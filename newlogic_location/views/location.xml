<odoo>
    <record id="view_g2plocation_tree" model="ir.ui.view">
        <field name="name">view_g2plocation_tree</field>
        <field name="model">g2p.location</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Location">
                <field name="parent"/>
                <field name="name"/>
                <field name="code"/>
                <field name="altnames"/>
                <field name="level"/>
            </tree>
        </field>
    </record>

    <record id="view_g2plocation_form" model="ir.ui.view">
        <field name="name">view_g2plocation_form</field>
        <field name="model">g2p.location</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Location">
                <sheet>
                    <group>
                        <field name="parent"/>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="altnames"/>
                        <field name="level"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_g2plocation" model="ir.actions.act_window">
        <field name="name">Location</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2p.location</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Location!
            </p><p>
                Click the create button to enter the information of the Location.
            </p>
        </field>
    </record>

    <record id="action_g2plocation_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_g2plocation_tree"/>
        <field name="act_window_id" ref="action_g2plocation"/>
    </record>

    <record id="action_g2plocation_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_g2plocation_form"/>
        <field name="act_window_id" ref="action_g2plocation"/>
    </record>

    <menuitem id="menu_g2plocation"
        name="Location"
        action="action_g2plocation"
        parent="newlogic_main.nl_registrant_menu_root"
        sequence="15"
        groups="newlogic_main.group_nl_admin"/>
</odoo>
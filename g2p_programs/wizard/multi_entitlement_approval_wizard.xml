<odoo>
    <data>
        <record id="multi_entitlement_approval_wizard_form_view" model="ir.ui.view">
            <field name="name">multi_entitlement_approval_wizard_form_view</field>
            <field name="model">g2p.multi.entitlement.approval.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label for="cycle_id" string="Cycle" />
                            </h1>
                            <h1>
                                <field name="cycle_id" readonly="1" />
                            </h1>
                            <div class="o_row">
                            </div>
                        </div>
                        <field name="entitlement_ids" nolabel="1" context="{'default_cycle_id': cycle_id}">
                          <tree string="Entitlements" editable="bottom">
                              <field name="cycle_id" invisible="1" />
                              <field
                                    name="entitlement_id"
                                    domain="[('cycle_id', '=', cycle_id)]"
                                    options="{'no_create_edit':True,'no_open':True,'no_create':True}"
                                />
                              <field
                                    name="state"
                                    decoration-secondary="state=='New'"
                                    decoration-primary="state=='Okay'"
                                    decoration-success="state=='Approved'"
                                    decoration-danger="state=='Conflict'"
                                    widget="badge"
                                    readonly="1"
                                />
                          </tree>
                        </field>
                    </sheet>
                    <footer>
                        <button
                            name="approve_entitlements"
                            string="Approve"
                            type="object"
                            class="oe_highlight"
                        />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>

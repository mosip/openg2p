<odoo>
    <record id="view_cycle_tree" model="ir.ui.view">
        <field name="name">view_cycle_tree</field>
        <field name="model">g2p.cycle</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Cycle">
                <field name="name" />
                <field name="program_id" />
                <field name="cycle_membership_ids" />
                <field name="voucher_ids" />
                <field name="company_id" groups="base.group_multi_company" />
                <field
                    name="state"
                    decoration-primary="state=='draft'"
                    decoration-success="state=='active'"
                    decoration-danger="state=='ended'"
                    widget="badge"
                    string="State"
                />
            </tree>
        </field>
    </record>

    <record id="view_cycle_form" model="ir.ui.view">
        <field name="name">view_cycle_form</field>
        <field name="model">g2p.cycle</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Cycle">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,ended" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            type="object"
                            class="oe_stat_button"
                            icon="fa-files-o"
                            name="copy_beneficiaries_from_program"
                            attrs="{'invisible':[('state','!=','draft')]}"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Copy Beneficiaries</span>
                                <span class="o_stat_text">from Program</span>
                            </div>
                        </button>
                        <button
                            type="object"
                            class="oe_stat_button"
                            icon="fa-files-o"
                            name="check_eligibility"
                            attrs="{'invisible':[('state','!=','draft')]}"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Verify Eligibility</span>
                            </div>
                        </button>
                        <button
                            type="object"
                            class="oe_stat_button"
                            icon="fa-files-o"
                            name="prepare_entitlement"
                        >
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Prepare</span>
                                <span class="o_stat_text">Entitlement</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title mb24">
                        <label for="name" string="Cycle:" />
                        <h1>
                            <field id="name" name="name" placeholder="Enter the cycle name..." />
                        </h1>
                    </div>
                    <group colspan="4" col="4">
                        <field name="program_id" colspan="4" />
                        <field name="start_date" />
                        <field name="end_date" />
                        <field
                            name="company_id"
                            groups="base.group_multi_company"
                            options="{'no_create': True}"
                            force_save="1"
                        />
                    </group>
                    <notebook>
                        <page string="Beneficiaries">
                          <field name="cycle_membership_ids" nolabel="1">
                            <tree>
                                <button
                                        name="open_cycle_membership_form"
                                        type="object"
                                        icon="fa-external-link"
                                        class="btn-success"
                                    />
                                <field name="partner_id" />
                                <field
                                        name="state"
                                        decoration-primary="state=='draft'"
                                        decoration-warning="state=='paused'"
                                        decoration-success="state=='enrolled'"
                                        decoration-danger="state=='exited'"
                                        widget="badge"
                                    />
                                <field name="enrollment_date" />
                            </tree>
                          </field>
                        </page>
                        <page string="Voucher">
                          <field name="voucher_ids" nolabel="1">
                            <tree>
                                <button
                                        name="open_voucher_form"
                                        type="object"
                                        icon="fa-external-link"
                                        class="btn-success"
                                    />
                                <field name="name" />
                                <field name="code" />
                                <field name="partner_id" />
                                <field name="cycle_id" />
                                <field name="valid_from" />
                                <field name="valid_until" />
                                <field name="state" />
                                <field name="company_id" groups="base.group_multi_company" />
                            </tree>
                          </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="action_cycle" model="ir.actions.act_window">
        <field name="name">Cycle</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2p.cycle</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new cycle!
            </p><p>
                Click the create button to enter the new cycle information.
            </p>
        </field>
    </record>

    <record id="action_cycle_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_cycle_tree" />
        <field name="act_window_id" ref="action_cycle" />
    </record>

    <record id="action_cycle_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_cycle_form" />
        <field name="act_window_id" ref="action_cycle" />
    </record>

    <menuitem
        id="menu_cycle"
        name="Cycles"
        action="action_cycle"
        parent="g2p_program_cycle_root"
        sequence="30"
        groups="g2p_registrant.group_g2p_admin"
    />

</odoo>

<odoo>
    <record id="view_cash_voucher_list_tree" model="ir.ui.view">
        <field name="name">view_cash_voucher_list_tree</field>
        <field name="model">g2p.cash_voucher</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Cash Voucher">
                <field name="voucher_id" />
                <field name="initial_amount" />
                <field name="balance" />
                <field name="currency_id" />
            </tree>
        </field>
    </record>

    <record id="view_cash_voucher_list_form" model="ir.ui.view">
        <field name="name">view_cash_voucher_list_form</field>
        <field name="model">g2p.cash_voucher</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Cash Voucher">
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title mb24">
                        <label for="voucher_id" string="Voucher:" />
                        <h1>
                            <field id="voucher_id" name="voucher_id" placeholder="Enter the voucher..." />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="initial_amount" />
                            <field name="balance" />
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cash_voucher_list" model="ir.actions.act_window">
        <field name="name">Cash Voucher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2p.cash_voucher</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new cash voucher!
            </p><p>
                Click the create button to enter the new program information.
            </p>
        </field>
    </record>

    <record id="action_cash_voucher_list_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_cash_voucher_list_tree" />
        <field name="act_window_id" ref="action_cash_voucher_list" />
    </record>

    <record id="action_cash_voucher_list_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_cash_voucher_list_form" />
        <field name="act_window_id" ref="action_cash_voucher_list" />
    </record>

    <menuitem
        id="menu_cash_voucher_list"
        name="Cash Voucher"
        action="action_cash_voucher_list"
        parent="g2p_registrant.g2p_program_menu_root"
        sequence="60"
        groups="g2p_registrant.group_g2p_admin"
    />

</odoo>

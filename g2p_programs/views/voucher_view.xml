<odoo>
    <record id="view_voucher_tree" model="ir.ui.view">
        <field name="name">view_voucher_tree</field>
        <field name="model">g2p.voucher</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Voucher">
                <field name="name" />
                <field name="code" />
                <field name="partner_id" />
                <field name="cycle_id" />
                <field name="valid_from" />
                <field name="valid_until" />
                <field name="state" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record id="view_voucher_form" model="ir.ui.view">
        <field name="name">view_voucher_form</field>
        <field name="model">g2p.voucher</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Voucher">
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title mb24">
                        <label for="name" string="Voucher:" />
                        <h1>
                            <field id="name" name="name" placeholder="Enter the program name..." />
                        </h1>
                        <label for="code" string="Code:" />
                        <h2>
                            <field id="code" name="code" placeholder="code..." />
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" />
                            <field name="cycle_id" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                                options="{'no_create': True}"
                                force_save="1"
                            />
                        </group>
                        <group>
                            <field name="valid_from" />
                            <field name="valid_until" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="action_voucher" model="ir.actions.act_window">
        <field name="name">Vocuher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2p.voucher</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new voucher!
            </p><p>
                Click the create button to enter the new voucher.
            </p>
        </field>
    </record>

    <record id="action_voucher_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_voucher_tree" />
        <field name="act_window_id" ref="action_voucher" />
    </record>

    <record id="action_voucher_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_voucher_form" />
        <field name="act_window_id" ref="action_voucher" />
    </record>

    <menuitem
        id="menu_voucher"
        name="Voucher"
        action="action_voucher"
        parent="g2p_program_voucher_root"
        sequence="50"
        groups="g2p_registrant.group_g2p_admin"
    />

</odoo>

<odoo>
    <record id="view_nl_datasource_tree" model="ir.ui.view">
        <field name="name">view_nl_datasource_tree</field>
        <field name="model">nl.datasource</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Datasource">
                <field name="name"/>
                <field name="batch"/>
            </tree>
        </field>
    </record>

    <record id="view_nl_datasource_form" model="ir.ui.view">
        <field name="name">view_nl_datasource_form</field>
        <field name="model">nl.datasource</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Datasource">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="batch"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_nl_datasource" model="ir.actions.act_window">
        <field name="name">Datasource</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nl.datasource</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Datasource!
            </p><p>
                Click the create button to enter the information of the Datasource.
            </p>
        </field>
    </record>

    <record id="action_nl_datasource_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_nl_datasource_tree"/>
        <field name="act_window_id" ref="action_nl_datasource"/>
    </record>

    <record id="action_nl_datasource_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_nl_datasource_form"/>
        <field name="act_window_id" ref="action_nl_datasource"/>
    </record>

    <menuitem id="menu_nl_datasource"
        name="Datasource"
        action="action_nl_datasource"
        parent="newlogic_main.nl_registrant_menu_root"
        sequence="13"
        groups="newlogic_main.group_nl_admin"/>
</odoo>
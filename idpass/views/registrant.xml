<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_individuals_form" model="ir.ui.view">
            <field name="name">view_individuals_form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="g2p_registrant.view_individuals_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                  <button
                        type="object"
                        class="oe_stat_button"
                        icon="fa-id-card "
                        name="send_idpass_parameters"
                    >
                          <div class="o_form_field o_stat_info">
                              <span class="o_stat_text">Generate</span>
                              <span class="o_stat_text">ID</span>
                          </div>
                  </button>
                </xpath>

                <xpath expr="//field[@name='email']" position="after">
                  <field name="id_pdf" string="ID Card" filename="id_pdf_filename" />
                  <field name="id_pdf_filename" invisible="1" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="ticket_view_form" model="ir.ui.view">
            <field name="name">ticket_view_form</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="string">Registrant</attribute>
                    <attribute
                        name="options"
                    >{'no_open':True, 'no_quick_create':True, 'no_edit':True,'no_create_edit':True}</attribute>
                    <attribute name="class">oe_edit_only</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="is_group" invisible="1" />
                    <field
                        name="partner_readonly_id"
                        attrs="{'invisible':[('is_group','=',False)]}"
                        context="{'form_view_ref': 'g2p_registrant.view_individuals_form'}"
                        string="Registrant"
                        class="oe_read_only"
                        readonly="1"
                    />
                    <field
                        name="partner_readonly_id"
                        attrs="{'invisible':[('is_group','=',True)]}"
                        context="{'form_view_ref': 'g2p_registrant.view_groups_form'}"
                        string="Registrant"
                        class="oe_read_only"
                        readonly="1"
                    />
                    <field
                        name="program_id"
                        string="Program"
                        class="oe_edit_only"
                        options="{'no_open':True, 'no_quick_create':True, 'no_edit':True, 'no_create_edit':True}"
                    />
                    <field name="program_readonly_id" string="Program" class="oe_read_only" readonly="1" />
                    <field
                        name="cycle_id"
                        string="Cycle"
                        class="oe_edit_only"
                        options="{'no_open':True, 'no_quick_create':True, 'no_edit':True,'no_create_edit':True}"
                    />
                    <field name="cycle_readonly_id" string="Cycle" class="oe_read_only" readonly="1" />
                </xpath>

            </field>
        </record>

        <!-- Inherit Tree View to Modify it -->
        <record id="ticket_view_tree" model="ir.ui.view">
            <field name="name">ticket_view_tree</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_tree" />
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_name']" position="after">
                    <field name="partner_id" string="Registrant" />
                </xpath>

            </field>
        </record>

    </data>
</odoo>

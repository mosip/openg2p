<odoo>
    <!-- individual -->
    <record id="view_individuals_ext_form" model="ir.ui.view">
        <field name="name">view_individuals_ext_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="g2p_registrant.view_individuals_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other']" position="after">
                <page name="custom" string="Custom Field">
                    <group col="4" colspan="4">
                    <div>
                        <button
                                type="object"
                                class="oe_stat_button btn-warning"
                                icon="fa-arrow-circle-down"
                                name="custom_form_view"
                            >Load all custom field</button>
                    </div>
                        <field name="ui_view_id" invisible="1" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>

<odoo>
    <record id="view_groups_list_tree" model="ir.ui.view">
        <field name="name">view_groups_list_tree</field>
        <field name="model">res.partner</field>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <tree string="Group Registrants" decoration-danger="disabled != False">
                <field name="name"/>
                <field name="address"/>
                <field name="kind"/>
                <field name="group_membership_ids" string="Total Members"/>
                <field name="category_id" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" string="Tags"/>
                <field name="disabled" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_groups_form" model="ir.ui.view">
        <field name="name">view_groups_form</field>
        <field name="model">res.partner</field>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <form string="Individual">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action" class="oe_stat_button" icon="fa-ban" 
                            name="%(action_disable_registrant_wizard)d"
                            attrs="{'invisible':[('disabled','!=',False)]}">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Disable</span>
                                <span class="o_stat_text">Registrant</span>
                            </div>
                        </button>
                        <button type="object" class="oe_stat_button" icon="fa-check" name="enable_registrant"
                            attrs="{'invisible':[('disabled','=',False)]}">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Enable</span>
                                <span class="o_stat_text">Registrant</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'avatar_128'}"/>
                    <div class="oe_title mb24">
                        <h1>
                            <field id="registrant" name="name" placeholder="Enter name of group..." required="1"
                                attrs="{'readonly':[('disabled','!=',False)]}"/>
                        </h1>
                        <div class="o_row">
                            <label for="category_id" string="Tags: "/>
                            <field name="category_id" widget="many2many_tags" 
                                options="{'color_field': 'color', 'no_create_edit': True}" 
                                placeholder="Tags..." colspan="4" string="Tags"
                                attrs="{'readonly':[('disabled','!=',False)]}"/>
                            <label for="company_id" string=" | Company: " groups="base.group_multi_company" />
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" attrs="{'readonly': [('parent_id', '!=', False)]}" force_save="1"/>
                        </div>
                    </div>
                    <group colspan="4" col="4">
                        <field name="registration_date" attrs="{'readonly':[('disabled','!=',False)]}"/>
                    </group>
                    <notebook>
                        <page string="Contact Details">
                            <group>
                                <group>
                                    <span class="o_form_label o_td_label" name="address_name">
                                        <b>Address</b>
                                    </span>
                                    <div class="o_address_format">
                                        <field name="address" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                        <!-- <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                        <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True, 'no_create': True}"/> -->
                                    </div>
                                </group>
                                <group>
                                    <field name="phone" widget="phone" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                    <field name="mobile" widget="phone" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                    <field name="user_ids" invisible="1" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                    <field name="email" widget="email" context="{'gravatar_image': True}" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                    <field name="website" string="Website" widget="url" placeholder="e.g. https://newlogic.com" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                    <field name="active_lang_count" invisible="1"/>
                                    <label for="lang" attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}"/>
                                    <div class="o_row" attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}">
                                        <field name="lang" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                    </div>
                                </group>
                            </group>
                        </page>                      
                        <page string="Group">
                            <group col="4" colspan="4">
                                <field name="kind" colspan="2" options="{'no_open':True, 'no_create_edit':True}" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                <newline/>
                                <field name="group_membership_ids" attrs="{'readonly':[('disabled','!=',False)]}" nolabel="1" colspan="4">
                                    <tree string="Members" editable="top">
                                        <field name="individual" 
                                            domain="[('is_registrant','=',True),('is_company','=',False)]"
                                            options="{'no_open':True, 'no_quick_create':True, 'no_create':True}" 
                                            string="Member Name"/>
                                        <field name="kind" widget="many2many_tags" options="{'no_open':True, 'no_create_edit':True}"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="IDs">
                            <field name="reg_ids" attrs="{'readonly':[('disabled','!=',False)]}" nolabel="1">
                                <tree string="Registrant IDs" editable="top">
                                    <field name="id_type" options="{'no_open':True,'no_create_edit':True,'no_create':True}"/>
                                    <field name="value"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Additional Fields">
                            <field name="addl_fields" attrs="{'readonly':[('disabled','!=',False)]}" nolabel="1">
                                <tree string="Additional Fields" editable="top">
                                    <field name="attribute_id" 
                                        options="{'no_open':True, 'no_quick_create':True, 'no_create':True}"/>
                                    <field name="name"/>
                                    <field name="value_int" invisible="1"/>
                                    <field name="value_char" invisible="1"/>
                                    <field name="value_text" invisible="1"/>
                                    <field name="value_float" invisible="1"/>
                                    <field name="value_date" invisible="1"/>
                                    <field name="value_boolean" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Others">
                            <group col="4" colspan="4">
                                <field name="create_date"/>
                                <field name="create_uid"/>
                                <field name="write_date"/>
                                <field name="write_uid"/>
                                <field name="disabled" readonly="1"/>
                                <field name="disabled_by" readonly="1"/>
                                <field name="disabled_reason" colspan="4" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                    <field name="avatar_128" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="country_code" invisible="1"/>
                    <field name="is_registrant" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                    <field name="is_group" invisible="1"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

<!-- List registrants -->
    <record id="action_groups_list" model="ir.actions.act_window">
        <field name="name">Groups</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_registrant':True,'default_is_group':True,'registrant_form':True}</field>
        <field name="domain">[('is_registrant', '=', True),('is_group','=',True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new group registrant!
            </p><p>
                Click the create button to enter the new registrant's information.
            </p>
        </field>
    </record>

    <record id="action_groups_list_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_groups_list_tree"/>
        <field name="act_window_id" ref="action_groups_list"/>
    </record>

    <record id="action_groups_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_groups_form"/>
        <field name="act_window_id" ref="action_groups_list"/>
    </record>

    <menuitem id="menu_groups_list"
        name="Groups"
        action="action_groups_list"
        parent="g2p_registrant_menu_root"
        sequence="20" 
        groups="g2p_registrant.group_g2p_admin"/>

</odoo>
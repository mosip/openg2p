<odoo>
    <record id="view_reg_attribute_tree" model="ir.ui.view">
        <field name="name">view_reg_attribute_tree</field>
        <field name="model">g2p.reg.attribute</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Additional Fields">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="kind"/>
                <field name="visible"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_reg_attribute_form" model="ir.ui.view">
        <field name="name">view_reg_attribute_form</field>
        <field name="model">g2p.reg.attribute</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Additional Field">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title mb24">
                        <label for="name" string="Attribute:"/>
                        <h1>
                            <field id="name" name="name" placeholder="Enter an attribute..."/>
                        </h1>
                        <div class="o_row">
                            <label for="company_id" string=" | Company: " groups="base.group_multi_company" />
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" force_save="1"/>
                        </div>
                    </div>
                    <group colspan="4" col="4">
                        <field name="kind"/>
                        <field name="visible"/>
                    </group>
                    <group string="Attribute Values">
                        <field name="value_ids" nolabel="1" context="{'visible':visible}">
                            <tree string="Attribute Values" editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="partner_id"
                                    options="{'no_open':True, 'no_quick_create':True, 'no_create':True}"/>
                                <field name="name" invisible="1"/>
                                <field name="value_int" invisible="1"/>
                                <field name="value_char" invisible="1"/>
                                <field name="value_text" invisible="1"/>
                                <field name="value_float" invisible="1"/>
                                <field name="value_date" invisible="1"/>
                                <field name="value_boolean" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="reg_attribute_filter" model="ir.ui.view">
        <field name="name">reg_attribute_filter</field>
        <field name="model">g2p.reg.attribute</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Search Additional Fields">
                <field name="name"/>
                <field name="kind"/>
                <field name="visible"/>
                <group expand="0" string="Group By">                                            
                    <filter string="Kind" name="grp_kind" context="{'group_by': 'kind'}"></filter>
                    <filter string="Visibile" name="grp_visible" context="{'group_by': 'visible'}"></filter>
                </group>
                <!-- <searchpanel>
                    <field name="group" icon="fa-users"/>
                </searchpanel> -->
            </search>
        </field>
    </record>

    <record id="action_reg_attribute" model="ir.actions.act_window">
        <field name="name">Additional Fields</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2p.reg.attribute</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="reg_attribute_filter"/>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add additional fields!
            </p><p>
                Click the create button to enter additional field's attributes and values.
            </p>
        </field>
    </record>

    <record id="action_reg_attribute_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_reg_attribute_tree"/>
        <field name="act_window_id" ref="action_reg_attribute"/>
    </record>

    <record id="action_reg_attribute_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_reg_attribute_form"/>
        <field name="act_window_id" ref="action_reg_attribute"/>
    </record>

    <menuitem id="menu_reg_attribute"
        name="Additional Fields"
        action="action_reg_attribute"
        parent="g2p_configuration_menu_root"
        sequence="40" 
        groups="g2p_registrant.group_g2p_admin"/>

</odoo>
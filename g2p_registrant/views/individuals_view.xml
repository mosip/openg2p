<odoo>
    <record id="view_individuals_list_tree" model="ir.ui.view">
        <field name="name">view_individuals_list_tree</field>
        <field name="model">res.partner</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <tree string="Individual Registrants" decoration-danger="disabled != False">
                <field name="name"/>
                <field name="address"/>
                <field name="category_id" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" string="Tag"/>
                <field name="disabled" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_individuals_form" model="ir.ui.view">
        <field name="name">view_individuals_form</field>
        <field name="model">res.partner</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Individual">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action" class="oe_stat_button" icon="fa-ban" 
                            name="%(action_disable_registrant_wizard)d"
                            attrs="{'invisible':[('disabled','!=',False)]}">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Disable</span>
                                <span class="o_stat_text">Registrant</span>
                            </div>
                        </button>
                        <button type="object" class="oe_stat_button" icon="fa-check" name="enable_registrant"
                            attrs="{'invisible':[('disabled','=',False)]}">
                            <div class="o_form_field o_stat_info">
                                <span class="o_stat_text">Enable</span>
                                <span class="o_stat_text">Registrant</span>
                            </div>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'avatar_128'}"/>
                    <div class="oe_title mb24">
                        <h1 class="oe_read_only">
                            <field id="registrant" name="name" readonly="1" class="oe_read_only"/>
                        </h1>
                        <div class="oe_edit_only">
                            <h2>
                                <field name="family_name" placeholder="Family Name..." default_focus="1" 
                                    required="1" class="oe_edit_only"
                                    attrs="{'readonly':[('disabled','!=',False)]}"/>
                            </h2>
                            <h2>
                                <field name="given_name" placeholder="Given Name..." 
                                    required="1" class="oe_edit_only"
                                    attrs="{'readonly':[('disabled','!=',False)]}"/>
                            </h2>
                            <h2>
                                <field name="addl_name" placeholder="Additional Name..." 
                                    required="0" class="oe_edit_only"
                                    attrs="{'readonly':[('disabled','!=',False)]}"/>
                            </h2>
                        </div>
                        <div class="o_row">
                            <label for="registration_date"/>
                            <field name="registration_date" attrs="{'readonly':[('disabled','!=',False)]}"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" attrs="{'readonly': [('parent_id', '!=', False)]}" force_save="1"/>
                        </div>
                    </div>
                    <notebook>
                        <page string="Contact Details">
                            <group>
                                <group>
                                    <span class="o_form_label o_td_label" name="address_name">
                                        <b>Address</b>
                                    </span>
                                    <div class="o_address_format">
                                        <field name="address" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                        <!-- <field name="street" placeholder="Street..." class="o_address_street"/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="city" placeholder="City" class="o_address_city"/>
                                        <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>
                                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                        <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True, 'no_create': True}"/> -->
                                    </div>
                                </group>
                                <group>
                                    <field name="phone" widget="phone" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                    <field name="mobile" widget="phone" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                    <field name="user_ids" invisible="1"/>
                                    <field name="email" widget="email" context="{'gravatar_image': True}" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                    <field name="website" string="Website" widget="url" placeholder="e.g. https://newlogic.com" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                    <field name="active_lang_count" invisible="1"/>
                                    <label for="lang" attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}"/>
                                    <div class="o_row" attrs="{'invisible': [('active_lang_count', '&lt;=', 1)]}">
                                        <field name="lang" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                    </div>
                                </group>
                            </group>
                        </page>                      
                        <page string="Personal Info">
                            <group col="6" colspan="6">
                                <field name="birth_place" colspan="6" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                <field name="birthdate" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                <field name="birthdate_exact" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                <field name="age" attrs="{'readonly':[('disabled','!=',False)]}"/>
                                <field name="gender" attrs="{'readonly':[('disabled','!=',False)]}"/>
                            </group>
                        </page>
                        <page string="IDs">
                            <field name="reg_ids" attrs="{'readonly':[('disabled','!=',False)]}" nolabel="1">
                                <tree string="Registrant IDs" editable="top">
                                    <field name="id_type" options="{'no_open':True,'no_create_edit':True,'no_create':True}"/>
                                    <field name="value"/>
                                </tree>
                            </field>
                        </page>
                        <!-- <page string="Additional Fields">
                            <group col="4" colspan="4">
                                <field name="addl_fields" nolabel="1" attrs="{'readonly':[('disabled','!=',False)]}"/>
                            </group>
                        </page> -->
                        <page string="Others">
                            <group col="4" colspan="4">
                                <field name="create_date"/>
                                <field name="create_uid"/>
                                <field name="write_date"/>
                                <field name="write_uid"/>
                                <field name="disabled" readonly="1"/>
                                <field name="disabled_by" readonly="1"/>
                                <field name="disabled_reason" readonly="1" colspan="4"/>
                                <field name="category_id" widget="many2many_tags" 
                                    options="{'color_field': 'color', 'no_create_edit': True}" 
                                    placeholder="Tags..." colspan="4" string="Tag"
                                    attrs="{'readonly':[('disabled','!=',False)]}"/>
                            </group>
                        </page>
                    </notebook>
                    <field name="avatar_128" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="country_code" invisible="1"/>
                    <field name="is_registrant" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                    <field name="is_group" invisible="1"/>
                    <field name="name" invisible="1" class="oe_edit_only"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

<!-- List registrants -->
    <record id="action_individuals_list" model="ir.actions.act_window">
        <field name="name">Individuals</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_is_registrant':True,'default_is_group':False,'registrant_form':True}</field>
        <field name="domain">[('is_registrant','=',True),('is_group','=',False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new individual registrant!
            </p><p>
                Click the create button to enter the new registrant's information.
            </p>
        </field>
    </record>

    <record id="action_individuals_list_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_individuals_list_tree"/>
        <field name="act_window_id" ref="action_individuals_list"/>
    </record>

    <record id="action_individuals_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_individuals_form"/>
        <field name="act_window_id" ref="action_individuals_list"/>
    </record>

    <menuitem id="menu_individuals_list"
        name="Individuals"
        action="action_individuals_list"
        parent="g2p_registrant_menu_root"
        sequence="10" 
        groups="g2p_registrant.group_g2p_admin"/>

</odoo>
<odoo>
    <record id="view_g2plocation_tree" model="ir.ui.view">
        <field name="name">view_g2plocation_tree</field>
        <field name="model">g2p.location</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Location">
                <field name="parent_id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="altnames"/>
                <field name="level"/>
            </tree>
        </field>
    </record>

    <record id="view_g2plocation_form" model="ir.ui.view">
        <field name="name">view_g2plocation_form</field>
        <field name="model">g2p.location</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Location">
                <sheet>
                    <div class="oe_title mb24">
                    <label for="parent_id" string="Parent:"/>
                    <h1>
                        <field id="parent_id" name="parent_id" placeholder="Select a Parent..."
                                options="{'no_open':True,'no_create_edit':True,'no_create':True}"/>
                    </h1>
                    <label for="name" string="Name:"/>
                    <h1>
                        <field id="name" name="name" placeholder="Location Name..."/>
                    </h1>
                    </div>
                    <group colspan="6" col="6">
                        <field name="altnames" colspan="6"/>
                        <field name="code" colspan="2"/>
                        <field name="level" colspan="2"/>
                    </group>
                    <notebook>
                        <page string="Child">
                            <field name="child_ids" nolabel="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="g2plocation_filter" model="ir.ui.view">
        <field name="name">g2plocation_filter</field>
        <field name="model">g2p.location</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <search string="Search location">
                <field name="name"/>
                <field name="parent_id" string="Parent"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="grp_parent" string="Parent" context="{'group_by': 'parent_id'}"/>
                    <filter name="grp_level" string="Level" context="{'group_by': 'level'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_g2plocation" model="ir.actions.act_window">
        <field name="name">Location</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">g2p.location</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Location!
            </p><p>
                Click the create button to enter the information of the Location.
            </p>
        </field>
    </record>

    <record id="action_g2plocation_tree_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_g2plocation_tree"/>
        <field name="act_window_id" ref="action_g2plocation"/>
    </record>

    <record id="action_g2plocation_form_view" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_g2plocation_form"/>
        <field name="act_window_id" ref="action_g2plocation"/>
    </record>

    <menuitem id="menu_g2plocation"
        name="Location"
        action="action_g2plocation"
        parent="g2p_registrant.g2p_configuration_menu_root"
        sequence="105"
        groups="g2p_registrant.group_g2p_admin"/>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<!-- Add location field to Individual registrant form view -->
    <record id="view_location_individuals_form" model="ir.ui.view">
        <field name="name">view_location_individuals_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="g2p_registrant.view_individuals_form" />
        <field name="arch" type="xml">
            <xpath expr="//span[@name='address_name']" position="before">
                <field
                    name="location_id"
                    placeholder="Location"
                    options="{'no_open': True, 'no_create': True}"
                    attrs="{'readonly':[('disabled','!=',False)]}"
                />
            </xpath>
        </field>
    </record>

</odoo>
